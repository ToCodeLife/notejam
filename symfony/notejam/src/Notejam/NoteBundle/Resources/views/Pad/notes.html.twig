{% extends 'base.html.twig' %}
{% block breadcrumbs %}<span>{{ pad.name }} ({{ notes|length}} notes)</span>{% endblock %}
{% block body %}
{% if notes|length %}
    <table class="notes">
        <tr>
            <th class="note">Note <a href="{{ path('pad_notes', {'id': pad.id})}}?order=-name" class="sort_arrow" >&uarr;</a><a href="{{ path('pad_notes', {'id': pad.id})}}?order=name" class="sort_arrow" >&darr;</a></th>
            <th>Pad</th>
            <th class="date">Last modified <a href="#" class="sort_arrow" >&uarr;</a><a href="#" class="sort_arrow" >&darr;</a></th>
        </tr>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('view_note', {'id': note.id})  }}">{{ note.name }}</a></td>
                <td class="pad">
                    {% if note.pad %}
                        <a href="#">{{ note.pad }}</a>
                    {% else %}
                        No pad
                    {% endif %}
                </td>
                <td class="hidden-text date">Today at 10:51</td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    <p class="empty">You don't have any notes</p>
{% endif %}

<a href="{{ path('create_note') }}?pad={{ pad.id }}" class="button">Create a note</a>
{% endblock %}

